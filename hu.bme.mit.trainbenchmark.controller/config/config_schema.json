{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "scenarios": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": [
        {
          "type": "string",
          "enum": [
            "User",
            "XForm",
            "Batch"
          ]
        }
      ],
      "additionalItems": {
        "type": "string",
        "enum": [
          "User",
          "XForm",
          "Batch"
        ]
      }
    },
    "MAVEN_OPTS": {
      "type": "object",
      "properties": {
        "Xmx": {
          "type": "string",
          "pattern": "^[0-9]+[m,g]",
          "default": "512m"
        },
        "XX:MaxPermSize": {
          "type": "string",
          "pattern": "^[0-9]+[m,g]",
          "default": "256m"
        }
      }
    },
    "JAVA_OPTS": {
      "type": "object",
      "properties": {
        "xmx": {
          "type": "string",
          "pattern": "^[0-9]+[m,g]",
          "default": "1g"
        },
        "maxPermSize": {
          "type": "string",
          "pattern": "^[0-9]+[m,g]",
          "default": "256m"
        }
      }
    },
    "minSize": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "maxSize": {
      "type": "integer",
      "default": 4
    },
    "workspacePath": {
      "type": "string",
      "default": "."
    },
    "series": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "queries": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": [
        {
          "type": "string",
          "enum": [
            "PosLength",
            "RouteSensor",
            "SignalNeighbor",
            "SwitchSensor",
            "SegmentLength",
            "SwitchNodes",
            "RouteEntry",
            "RouteRouteDefinition",
            "TrackElementSensor"
          ]
        }
      ],
      "additionalItems": {
        "type": "string",
        "enum": [
          "PosLength",
          "RouteSensor",
          "SignalNeighbor",
          "SwitchSensor",
          "SegmentLength",
          "SwitchNodes",
          "RouteEntry",
          "RouteRouteDefinition",
          "TrackElementSensor"
        ]
      },
      "default": [
        "PosLength",
        "RouteSensor",
        "SignalNeighbor",
        "SwitchSensor"
      ]
    },
    "tools": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": [
        {
          "type": "string",
          "enum": [
            "drools5",
            "drools6",
            "eclipseocl",
            "emfincquery",
            "fourstore",
            "java",
            "jena",
            "mysql",
            "neo4j",
            "sesame",
            "postgresql",
            "virtuoso"
          ]
        }
      ],
      "additionalItems": {
        "type": "string",
        "enum": [
          "drools5",
          "drools6",
          "eclipseocl",
          "emfincquery",
          "fourstore",
          "java",
          "jena",
          "mysql",
          "neo4j",
          "sesame",
          "postgresql",
          "virtuoso"
        ]
      },
      "default": [
        "sesame"
      ]
    }
  }
}
